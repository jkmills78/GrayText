<Window x:Class="GrayText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrayText"
        mc:Ignorable="d"
        Title="Gray Text" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Stretch" Height="28" VerticalAlignment="Top">
            <MenuItem Header="File" Height="28" Width="37">
                <MenuItem Header="Save" HorizontalAlignment="Left" Width="140" Click="onSave"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Black Listed Words" HorizontalAlignment="Left" Width="210" Margin="0,0,-59,0" Click="onBlackListWordsClick"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" HorizontalAlignment="Stretch" Margin="10,33,10,10" TextWrapping="Wrap" VerticalAlignment="Stretch" AcceptsReturn="True" TextChanged="onTextChanged" />

    </Grid>
</Window>
