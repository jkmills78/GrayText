<Window x:Class="Gray_Text.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gray_Text"
        mc:Ignorable="d"
        Title="Gray Text" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Stretch" Height="28" VerticalAlignment="Top" Width="517">
            <MenuItem Header="File" Height="28" Width="37">
                <MenuItem Header="Save" HorizontalAlignment="Left" Width="140"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="276" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" AcceptsReturn="True" PreviewKeyDown="onKeyDown" TextChanged="onTextChanged" />

    </Grid>
</Window>
